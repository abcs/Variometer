#include "Kalman.h"

volatile static int x_est_last = 0;
volatile static float P_last = 0;

//the noise in the system
volatile static const float Q = 0.5;
volatile static const float R = 1.0;

void init_kalman(int z_measured)
{
	x_est_last = z_measured;
}

int kalman(int z_measured)
{
    float K;
    float P;
    float P_temp;
    int x_temp_est;
    int x_est;

    //do a prediction
    x_temp_est = x_est_last;
    P_temp = P_last + Q;

    //calculate the Kalman gain
    K = P_temp * (1.0F / (P_temp + R));

    //correct
    x_est = (float)x_temp_est + K * (float)(z_measured - x_temp_est);
    P = (1.0F - K) * P_temp;

    //update our last's
    P_last = P;
    x_est_last = x_est;

    return (x_est);
}


